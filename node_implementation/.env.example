# Database Configuration for NeonDB
# Copy this file to .env and fill in your actual values

# Database Type (don't change)
DB_TYPE=postgres

# NeonDB Host
# Get this from your NeonDB dashboard
# Example: ep-your-project-name.us-east-1.aws.neon.tech
DB_HOST=your-neondb-host.neon.tech

# Database Port (usually 5432 for PostgreSQL)
DB_PORT=5432

# Database Username
# Usually: neondb_owner or your custom username
DB_USERNAME=your_username

# Database Password
# Get this from NeonDB dashboard (starts with npg_)
DB_PASSWORD=your_password

# Database Name
# Usually: neondb or your custom database name
DB_DATABASE=neondb

# Enable SSL for secure connection (recommended for production)
# Set to 'true' for NeonDB (required)
DB_SSL=true

# Node Environment
# Options: local, development, production
NODE_ENV=local
